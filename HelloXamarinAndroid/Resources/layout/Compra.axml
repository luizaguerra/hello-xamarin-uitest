<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:text="Compras"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center" />
    <TextView
        android:text="Total a pagar Água"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="80dp"
        android:gravity="center" />
    <TextView
        android:text="R$"
        android:layout_marginTop="60dp"
        android:layout_width="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <EditText
        android:text="0"
        android:numeric="integer"
        android:inputType="number"
        android:id="@+id/totalpagaragua"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <TextView
        android:text="Total a pagar Refri"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="80dp"
        android:gravity="center" />
    <TextView
        android:text="R$"
        android:layout_marginTop="120dp"
        android:layout_width="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <EditText
        android:text="0"
        android:id="@+id/totalpagarrefri"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <TextView
        android:text="Total a pagar Bolo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="80dp"
        android:gravity="center" />
    <TextView
        android:text="R$"
        android:layout_marginTop="180dp"
        android:layout_width="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <EditText
        android:text="0"
        android:id="@+id/totalpagarbolo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <TextView
        android:text="Total a pagar Burger"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="80dp"
        android:gravity="center" />
    <TextView
        android:text="R$"
        android:layout_marginTop="240dp"
        android:layout_width="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <EditText
        android:text="0"
        android:id="@+id/totalpagarburger"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <EditText
        android:text="0"
        android:id="@+id/totalcompra"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <TextView
        android:text="R$"
        android:layout_marginTop="360dp"
        android:layout_width="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />
    <ImageView
        android:id="@+id/imgtotalcompra"
        android:background="@drawable/money"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="360dp"
        android:layout_marginRight="160dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>